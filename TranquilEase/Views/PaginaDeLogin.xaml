<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TranquilEase.Views.PaginaDeLogin"
             Title="PaginaDeLogin">
    <VerticalStackLayout>

        <Entry Text="{Binding user.Email}" Placeholder="email"/>
        <Entry Text="{Binding user.Senha}" Placeholder="senha"/>
        
        <Button Text="Salvar" Command="{Binding SalvarCommand}" />

        <Label Text="{Binding MensagemParaOFront}"/>

    </VerticalStackLayout>
</ContentPage>