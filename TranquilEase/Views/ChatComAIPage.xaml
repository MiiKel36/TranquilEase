<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TranquilEase.Views.ChatComAIPage"
             Title="ChatComAIPage">
    <VerticalStackLayout>
        <StackLayout BindableLayout.ItemsSource="{Binding StackChatBallons}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Text}" FontSize="{Binding FontSize}"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>

        <HorizontalStackLayout>
            <Button Text="Enviar" Command="{Binding ExecuteCodeSendToApi}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
