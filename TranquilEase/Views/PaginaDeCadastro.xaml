<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TranquilEase.Views.PaginaDeCadastro"
             Title="PaginaDeCadastro">

    
    <VerticalStackLayout>

        <Entry Text="{Binding User }" Placeholder="User"/>
        <Entry Text="{Binding Senha}" Placeholder="Senha"/>
        <Entry Text="{Binding SenhaConfirm}" Placeholder="SenhaConfirm"/>
        <Entry Text="{Binding Email}" Placeholder="UEmail"/>

        <Button Text="Salvar" Command="{Binding SalvarCommand}" />

        <Label Text="{Binding MensagemParaOFront}"/>

    </VerticalStackLayout>
</ContentPage>